{
	"name": "template-repos-ts-sol",
	"version": "1.0.0",
	"description": "Template repository for using TypeScript and Solidity",
	"main": "index.js",
	"scripts": {
		"test": "hardhat test",
		"pretest": "yarn generate",
		"generate": "hardhat compile",
		"pregenerate": "yarn clean",
		"lint": "yarn lint:eslint && yarn lint:solhint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts --fix",
		"lint:solhint": "solhint --fix --max-warnings 0 \"contracts/**/*.sol\"",
		"lint:format": "prettier --write '**/*.{sol,ts,json,md,yml}'",
		"build": "tsc -p tsconfig.build.json",
		"prebuild": "yarn generate",
		"clean": "del 'artifacts'",
		"prepare": "husky install"
	},
	"author": "",
	"license": "MPL-2.0",
	"devDependencies": {
		"@devprotocol/i-s-tokens": "^3.0.1",
		"@nomiclabs/hardhat-ethers": "2.2.3",
		"@nomiclabs/hardhat-etherscan": "3.1.8",
		"@nomiclabs/hardhat-waffle": "2.0.6",
		"@openzeppelin/contracts": "4.9.3",
		"@types/chai": "4.3.11",
		"@types/dotenv": "8.2.0",
		"@types/mocha": "10.0.6",
		"@types/node": "20.10.4",
		"@typescript-eslint/eslint-plugin": "5.62.0",
		"@typescript-eslint/parser": "5.62.0",
		"chai": "4.3.10",
		"del-cli": "5.1.0",
		"dotenv": "16.3.1",
		"eslint": "8.55.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-config-xo": "0.43.1",
		"eslint-config-xo-typescript": "1.0.1",
		"ethereum-waffle": "^4.0.0",
		"ethers": "5.7.2",
		"hardhat": "2.19.2",
		"husky": "8.0.3",
		"mocha": "10.2.0",
		"prettier": "2.8.8",
		"prettier-plugin-solidity": "1.2.0",
		"ts-node": "10.9.1",
		"typescript": "5.3.3"
	},
	"dependencies": {
		"@devprotocol/protocol": "^3.4.1",
		"@devprotocol/protocol-v2": "^0.6.0",
		"@openzeppelin/contracts-upgradeable": "^4.4.2",
		"@openzeppelin/hardhat-upgrades": "^1.22.1",
		"@typechain/ethers-v5": "^9.0.0",
		"@typechain/hardhat": "^2.3.0",
		"@uniswap/v2-periphery": "^1.1.0-beta.0",
		"@uniswap/v3-periphery": "^1.4.0",
		"solhint": "^4.0.0",
		"solidity-coverage": "^0.8.0",
		"typechain": "^8.0.0"
	}
}
