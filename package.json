{
  "name": "template-repos-ts-sol",
  "version": "1.0.0",
  "description": "Template repository for using TypeScript and Solidity",
  "main": "index.js",
  "scripts": {
    "test": "truffle test",
    "pretest": "npm run generate",
    "generate": "truffle compile && typechain --target truffle './build/**/*.json'",
    "deploy": "truffle migrate --reset --network",
    "lint": "npm run lint:eslint && npm run lint:solium && npm run lint:format",
    "lint:eslint": "eslint . --ext .ts,.js --fix --ignore-pattern node_modules/ --ignore-pattern types/",
    "lint:solium": "solium --dir . --fix",
    "lint:format": "prettier --write '**/*.{sol,js,json,md,yml}'"
  },
  "author": "",
  "license": "MPL-2.0",
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "dotenv": "^8.1.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-xo": "^0.27.1",
    "eslint-config-xo-typescript": "^0.19.0",
    "eslint-plugin-prettier": "^3.1.1",
    "ethlint": "^1.2.5",
    "prettier": "^1.18.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.34",
    "truffle": "^5.0.39",
    "truffle-hdwallet-provider": "^1.0.17",
    "truffle-typings": "^1.0.8",
    "ts-node": "^8.4.1",
    "typechain": "^0.3.21",
    "typescript": "^3.6.3"
  }
}
